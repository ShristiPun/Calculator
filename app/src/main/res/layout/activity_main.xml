<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="40dp"

        android:hint="0"
        android:id="@+id/numberView"
        android:editable="false"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:padding="30dp"
        android:layout_marginTop="10dp">




        <Button
            android:textSize="30dp"
            android:text="7"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/numSeven"

            />
        <Button
            android:textSize="30dp"
            android:text="8"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/numEight"

            />
        <Button
            android:textSize="30dp"
            android:text="9"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/numNine"
 
            />
        <Button

            android:text="+"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:id="@+id/buttonAdd"

            />

        <Button
            android:textSize="30dp"
            android:text="4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/numFour"

            />
        <Button
            android:textSize="30dp"
            android:text="5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/numFive"

            />
        <Button
            android:textSize="30dp"
            android:text="6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/numSix"

            />
        <Button
            android:textSize="30dp"
            android:text="-"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/buttonSub"

            />
        <Button
            android:textSize="30dp"
            android:text="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/numOne"

            />
        <Button
            android:textSize="30dp"
            android:text="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/numTwo"

            />
        <Button
            android:textSize="30dp"
            android:text="3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/numThree"

            />
        <Button
            android:textSize="30dp"
            android:text="*"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/buttonMul"
            />


        <Button
            android:textSize="30dp"
            android:text="C"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/buttonClear"

            />
        <Button
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:id="@+id/numZero"

            />
        <Button
            android:textSize="30dp"
            android:text="="
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/buttonEqual"

            />
        <Button
            android:textSize="30dp"
            android:text="/"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/buttonDiv"

            />

    </GridLayout>
</LinearLayout>